.dp-brand-detail {
  // section 브랜드 이름
  .brand-detail__header {
    padding-top: 30px;
    padding-bottom: 22px;
    h1 {
      display: flex;
      align-items: center;
      font-size: 18px;
      letter-spacing: -.72px;
      line-height: 28px;
      font-weight: 700;
      word-break: keep-all;
      .title-kor {
        font-size: 12px;
        letter-spacing: -.48px;
        margin-left: 8px;
        color: $gray-700;
        font-weight: 400;
      }
    }
    .icon-heart__area {
      display: flex;
      align-items: center;
    }
    .wish-count {
      font-size: 12px;
      letter-spacing: -.48px;
    }
    .icon-share {
      margin-left: 20px;
    }
  }

  // section 브랜드 설명
  .detail-contents__wrap {
    .contents__box {
      padding-bottom: 40px;
      img {
        width: 100%;

      }
      .brand-detail__description {
        font-size: 16px;
        letter-spacing: -.64px;
        line-height: 24px;
        color: $gray-700;
        word-break: keep-all;
        padding-top: 20px;
      }
    }
  }

  .detail-contents__related {
    padding-top: 30px;
    margin-bottom: 40px;
    border-top: 1px solid $border-color;
    .related-title {
      font-size: 16px;
      letter-spacing: -.64px;
      font-weight: 500;
      margin-bottom: 10px;
    }
  }

  // section 이벤트 배너
  .event__banner__section {
    .swiper-slide {
      width: 100% !important;
    }
    .swiper-pagination {
      position: initial;
      padding-top: 30px;
    }
    .swiper-pagination-bullet-active {
      background: $black;
    }
  }

  // section 브랜드 상품
  .brand__product__section {
    padding-top: 40px;
    &.img-none{
      padding-top: 0px;
    }
    .brand__product-list__header {
      .header__top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 50px;
        padding-left: 20px;
        padding-right: 14px;
        // background: $gray-100;
      }
      .product-count__p {
        font-size: 14px;
        letter-spacing: -.56px;
        font-weight: 500;
      }
      .header-right {
        align-items: center;
      }

      .list-icon-box {
        width: 20px;
        height: 20px;
        margin-right: 8px;
      }

      .icon-sort {
        background-image: url("~@/assets/common/icon/icon-sort-black-20px.svg");
      }
      .form-select {
        font-size: 14px;
        letter-spacing: -.56px;
        font-weight: 500;
        padding-left: 0;
        padding-right: 18px;
      }
    }
    .brand__product-area {
      padding-top: 20px;
      padding-bottom: 40px;
      // li + li {
      //   margin-top: -16px;
      // }
    }
  }

  .detail-contents__wrap{
    &.img-none{display: none;}
  }
  
}




.dplot_v2{
  .dp-product.horizontal{
    &{
      flex-wrap: wrap;
    }

    .product-thumbnail{
      width: 100%;
      height: 155px;
    }
    .product__ctg{left: 0;}
    .product__contents{
      width: 100%;
      padding-left: 0;
    }
  }
}