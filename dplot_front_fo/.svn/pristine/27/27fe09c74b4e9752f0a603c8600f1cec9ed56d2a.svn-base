.dp-mypage-coupon {
  // 쿠폰 사용안내 section
  .coupon-use__guide__section {
    padding-top: 20px;
    .coupon-use__guide__header {
      padding-bottom: 14px;
      display: flex;
      justify-content: flex-end;
      .coupon-use__guide__header__area {
        display: flex;
        .coupon-use__guide__header__title {
          font-size: 14px;
          letter-spacing: -.56px;
          line-height: 20px;
          margin-right: 4px;
        }
      }

    }
    .coupon-use__guide__body {
      margin-right: -4px;
      margin-left: -4px;

      .coupon__box__area {
        display: flex;
      // box 공통사항
      .box__title {
        font-size: 14px;
        letter-spacing: -.56px;
        margin-left: 2px;
      }
      .dp-icon {
        margin-top: 1px;
      }
      .coupon__count {
        font-size: 22px;
        letter-spacing: -.88px;
        font-weight: 600;
        margin-right: 2px;
      }
      .coupon__unit {
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 20px;
      }
      .box__footer {
        display: flex;
        justify-content: flex-end;
      }
      .coupon__box {
        width: 50%;
        height: 100px;
        padding: 14px 14px 16px 14px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }
      .use-imminent__box {
        background: #fff5f4;
        margin-right: 10px;
      }
      .use-possible__box {
        background: $gray-100;
      }
    }
    }
  }

  // 프로모션 코드 등록
  .promotion-code__section {
    padding-top: 40px;
    padding-bottom: 30px;
    .promotion-code__header {
      padding-bottom: 10px;
      .promotion-code__header__title {
        font-size: 16px;
        letter-spacing: -.64px;
        line-height: 24px;
        font-weight: 500;
      }
    }
    .promotion-code__body {
      .input__area {
        display: flex;
      }
      .base-input {
        width: calc(100% - 94px);
      }
      .dp-btn {
        width: 84px;
        margin-left: 10px;
      }
    }
  }

  // 쿠폰 가능 탭 section
  .coupon-use__tab__section {
    // tab 메뉴
    .nav-tabs {
      border-bottom: 2px solid $gray-400;
      > li {
        width: 50%;
        text-align: center;
      }
      .nav-link {
        color: $gray-700;
        font-size: 14px;
        letter-spacing: -.56px;
        padding: 15px 0;
      }
      .nav-link.active, .nav-tabs .nav-item.show .nav-link {
        position: relative;
        top: 2px;

        color: $black;
        font-size: 16px;
        letter-spacing: -.64px;
        font-weight: 700;
        border: none;
        border-bottom: 2px solid $black;
        padding: 13px 0;
      }
    }
    //  쿠폰 비어있을 때 공통 사항
    .empty__area {
      padding-bottom: 114px;
      .empty__body {
        padding-top: 80px;
      }
      .empty-icon-area {
        width: 94px;
        height: 94px;
        background: $gray-100;
        border-radius: 50%;
      }
      .empty-text__area {
        padding-top: 20px;
        .empty-text {
          font-size: 14px;
          letter-spacing: -.56px;
          color: $gray-700;
        }
      }
    }
    // 쿠폰 있을 때 공통사항
    .coupon__area {
      .coupon__ul {
        li + li {
          padding-top: 10px;
        }
      }
    }
    .use-coupon__area {
      .coupon__ul {
        padding-top: 34px;
        padding-bottom: 60px;
      }
    }
    .download-coupon__area {
      .download-icon__area {
        padding-top: 30px;
        .dp-icon {
          margin-left: 4px;
        }
      }
      .coupon__ul {
        padding-top: 20px;
        padding-bottom: 120px;
      }
    }
  }

}

// 쿠폰 사용안내 모달
.coupon-use-modal {
  section + section {
    padding-top: 20px;
  }
  .coupon-use__guide__header {
    padding-bottom: 10px;
    p {
      font-size: 16px;
      letter-spacing: -.64px;
      font-weight: 500;
    }
  }
  .coupon-use__guide__body {
    li {
      width: 100%;
      font-size: 14px;
      letter-spacing: -.56px;
      line-height: 22px;
      word-break: keep-all;
    }
  }
}
