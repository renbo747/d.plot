/* detail scss */
.detail__contents {
  padding: 0 20px 100px 20px;
  @include media-breakpoint-up(lg) {
    padding: 0 40px 100px 40px;
  }
}
.product__contents__img {
  margin-left: -40px;
  margin-right: -40px;
  padding-bottom: 60px;
}
.contents__title__bar {
  width: 60px;
  height: 4px;
  background-color: #111111;
  display: block;
  margin: 40px 0;
}
.point__header__title {
  font-size: 26px;
  letter-spacing: -1.04px;
  font-weight: 700;
  @include media-breakpoint-up(lg) {
    font-size: 40px;
    letter-spacing: -2px;
    line-height: 42px;

  }
}

.product__contents__title {
  font-size: 26px;
  font-weight: 700;
  @include media-breakpoint-up(lg) {
    font-size: 40px;
    letter-spacing: -1.6px;
  }
}
.product-shop-title {
  font-size: 18px;
  font-weight: 700;
  @include media-breakpoint-up(lg) {
    font-size: 28px;
    letter-spacing: -1.12px ;
  }
}
.product__contents__text {
  font-size: 16px;
  @include media-breakpoint-up(lg) {
    font-size: 18px;
    letter-spacing: -.78px;
  }
}
.point-contents__section {
  margin-left: -40px;
  margin-right: -40px;
  padding: 50px 40px;
  background-color: #eaeaea;
}
.detail__contents__section + .detail__contents__section {
  margin-top: 120px;
}
// point scss
.point__header__title {
  position: relative;
  bottom: 0;
  padding: 0 3px;
  display: inline-block;
  background-image: linear-gradient(to top ,#c0ff00 50%, transparent 50%);
}
.point__contents__ul {
  padding: 30px 0;

  li + li {
    padding-top: 14px;
  }
  .point__contents__list {
    align-items: center;
  }
  .icon-check-point {
    width: 20px;
    height: 20px;
    background: url("~@/assets/common/icon/icon-check-point.png") no-repeat;
    background-size: 20px;
    margin-right: 10px;
  }
}
// description
.contents__description {
  padding-bottom: 10px;
}
.detail__contents__box + .detail__contents__box{
  padding-top: 100px;
}
.contents-detail__img {
  padding-bottom: 60px;
}
.contents-detail__title {
  font-size: 56px;
  letter-spacing: -1.68px;
  font-weight: 700;
  padding-bottom: 30px;
}
.contents-detail__description {
  font-size: 18px;
  letter-spacing: -.72px;
}
.detail__section__title {
  position: relative;
  font-size: 26px;
  letter-spacing: -1.04px;
  margin-bottom: 20px;
  padding-left: 20px;
  font-weight: 700;
  @include media-breakpoint-up(lg) {
    font-size: 40px;
    letter-spacing: -2px;
    line-height: 42px;
    margin-bottom: 40px;
    padding-left: 30px;
  }
  &::after {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    content: '';
    width: 6px;
    height: 40px;
    background-color: #111111;
  }

}
/* designer */
.designer__born {
  padding: 20px 0;
  margin-bottom: 0;
}
.section-title-en {
  font-size: 42px;
  color:#888888;
}
.detail-img__section + .detail-img__section {
  padding-top: 20px;
}
/* option scss */
.option__list__text {
  font-weight: 400;
}

/* 사용방법 */
.use__section__title {
  font-size: 72px;
  letter-spacing: -.8px;
  font-weight: 700;
  margin-bottom: 40px;
}
.use__list + .use__list {
  padding-top: 60px;
}
.use__contents__img__wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.detail__contents__use {
  padding-top: 20px;
}
.use__contents__img {
  max-width: 49%;
  position: relative;
}
.use__number {
  position: absolute;
  left: 0;
  top: 0;
}
.use-img__square {
  display: block;
  width: 20px;
  height: 20px;
  background-color: #111111;
  color: #ffffff;
  text-align: center;
  font-size: 14px;
  @include media-breakpoint-up(lg) {
    width: 40px;
    height: 40px;
    font-size: 20px;
    line-height: 2;
  }
}
.mr-20 {
  margin-right: 2%;
}
.mt-20 {
  margin-top: 2%;
}
.use__text__wrap {
  padding-top: 20px;
  @include media-breakpoint-up(lg) {
    padding-top: 80px;
  }

}
.detail__use__title {
  font-size: 24px;
  letter-spacing: -.72px;
  font-weight: 700;
  padding-bottom: 30px;
}
.detail__use__li + .detail__use__li {
  padding-top: 20px;
}
.detail__use__list {
  display: flex;
  align-items: flex-start;
}
.ul__square {
  text-align: center;
  width: 18px;
  height: 18px;
  font-size: 14px;
  background-color: #111111;
  color: #ffffff;
  @include media-breakpoint-up(lg) {
    width: 24px;
    height: 24px;
    font-size: 16px;
  }
}
.use__text {
  line-height: 1;
  margin-left: 5px;
  font-size: 16px;
  letter-spacing: -.56px;
  width: calc(100% - 23px);
  @include media-breakpoint-up(lg) {
    font-size: 22px;
    letter-spacing: -.8px;
    margin-left: 10px;
    width: calc(100% - 34px);
  }

}
