.new-list {
  @include media-breakpoint-up(xl) {
    padding-top: 60px;
  }
  .new-list__header {
    h1 {
      font-size: 42px;
      letter-spacing: -1.26px;
      line-height: 50px;
      font-weight: 800;
    }
    .dp-sort__ul {
      flex-wrap: wrap;
      li + li {
        margin-left: 0;
      }
      li {
        margin-right: 10px;
        margin-bottom: 10px;
      }
    }
  }

  .status-text.lg {
    width: 130px;
    height: 48px;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: -.72px;
  }
}
