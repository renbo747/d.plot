.brand-card {
  position: relative;
  .card__label {
    position: absolute;
    top: 20px;
    left: -20px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 31.3%;
    height: 30px;
    background: #333;
    font-size: 12px;
    font-weight: 600;
    color: #fff;
    //text-transform: uppercase;
    @include media-breakpoint-up(xl) {
      top: 50px;
      left: 0;
      width: 200px;
      height: 70px;
      font-size: 24px;
    }
  }

  .card__img {
    margin-bottom: 0;
    img {
      width: 100%;
    }
  }
}
