.magazine-trend-detail {
  .trend-detail__header__section {
    padding: 30px 0;
    h1 {
      font-size: 18px;
      letter-spacing: -.72px;
      line-height: 28px;
      font-weight: 700;
      word-break: keep-all;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }
    .icon-heart__area {
      display: flex;
      align-items: center;
    }
    .wish-count {
      font-size: 12px;
      letter-spacing: -.48px;
    }
    .icon-share {
      margin-left: 20px;
    }
  }
  .detail-contents__wrap {
    .contents__box {
      padding-bottom: 80px;
      img {
        width: 100%;

      }
      .trend-detail__title {
        padding-top: 32px;
        font-size: 32px;
        letter-spacing: -1.6px;
        line-height: 40px;
        font-weight: 700;
        padding-bottom: 20px;
      }
      .trend-detail__description {
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 22px;
        color: $gray-700;
        word-break: keep-all;
      }
    }
  }

}