.magazine-keyword-pc {
  width: 100%;
  height: calc(100vh - 100px);
  // 공통
  .keyword-title {
    font-size: 18px;
    letter-spacing: -.72px;
    line-height: 28px;
    font-weight: 700;
    padding-bottom: 30px;
    color: #ffffff;
  }
  // 키워드 있을 때
  .magazine-keyword__section {
    position: relative;
    width: 100%;
    height: 100%;
    background: url('~@/assets/pc/img/main/img-keyword02.jpg') no-repeat center/cover;
    padding-top: 152px;
    &::before {
      position: absolute;
      content: "";
      top: 0;
      right: 0;
      bottom: 0;
      opacity: 0.2;
      background-color: #000;
      width: 100%;
      height: 100%;
    }
    .keyword__wrap {
      position: relative;
      padding: 0 60px;
      .keyword__ul__wrap {
        .keyword__li {
          font-size: 30px;
          letter-spacing: -1.2px;
          font-weight: 700;
        }
        li + li {
          margin-top: 20px;
        }
      }
    }
  }
  // 키워드 없을 때
  .empty-keyword__section {
    position: relative;
    width: 100%;
    height: 100%;
    background: url('~@/assets/pc/img/main/img-keyword.jpg') no-repeat center/cover;
    padding-top: 180px;
    &::before {
      position: absolute;
      content: "";
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      opacity: 0.2;
      background-color: #000;
      width: 100%;
      height: 100%;
    }
    .empty__keyword__wrap {
      position: relative;
      .empty__keywords__P {
        //text-transform: uppercase;
        color: #ffffff;
        font-size: 30px;
        letter-spacing: -1.2px;
        font-weight: 600;
      }
    }
  }
}
