    align-items: center;
    justify-content: center;
    padding: 40px 0;
    .img-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      flex-direction: column;
      width: 215px;
      height: 215px;
      padding: 8px 30px;
      background: url("~@/assets/common/img/img-guarantee-background-215px.svg") no-repeat 0;

      & > div + div {
        margin-top: 8px;
      }
    }

    .logo-img {
      figure {
        width: 58px;
        height: 14px;
      }
      img {
        width: 100%;
      }
    }

    .item-img {
      width: 155px;
      height: 155px;
      img {
        width: 100%;
      }
    }

    .guarantee-text {
      font-size: 10px;
      letter-spacing: -.3px;
      line-height: 12px;
      color: $white;
      //text-transform: uppercase;
    }
  }

  .guarantee__item-section {
    padding: 30px 0;

    & > p + p {
      margin-top: 4px;
    }

    .brand-name {
      font-size: 12px;
      letter-spacing: -.36px;
      line-height: 14px;
      font-weight: 600;
    }

    .item-text {
      color: $gray-700;
      font-size: 12px;
      letter-spacing: -.48px;
      line-height: 17px;
    }

    .dp-bar {
      height: 10px;
      margin-left: 6px;
      margin-right: 6px;
    }

    .item-price {
      font-size: 14px;
      letter-spacing: -.56px;
      line-height: 20px;
      .atten-new {
        font-size: 18px;
        letter-spacing: -.54px;
        line-height: 21px;
        font-weight: 600;
        margin-right: 2px;
      }
    }
  }

  .guarantee__buyer-section {
    padding: 30px 0;
    .buyer-info__ul {

      li {
        display: flex;
        align-items: center;
      }

      li + li {
        margin-top: 6px;
      }

      p {
        color: $gray-700;
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 20px;
      }

      p:first-child {
        width: 50px;
        margin-right: 40px;
      }
    }
  }
}

// 거래명세서 모달
