.mypage-order-detail {
  padding: 20px 0 30px;

  .order-detail__button {
    padding: 0 10px 0 16px;
    .icon-arrow-right {
      margin-left: 2px;
    }
  }

  .li-mt-10 {
    li {
      margin-top: 10px;
    }
  }

  .price-info__unit {
    font-family: 'Noto Sans KR', sans-serif;
  }

  .noto-sans {
    font-family: 'Noto Sans KR', sans-serif;
    //text-transform: uppercase;
  }

  .padding-top-20 {
    padding-top: 20px !important;
  }

  .dp-price-info {

    .li-mt-10 {
      li + li {
        margin-top: 10px;
      }
    }
  }

  .detail-add li::before {
    top: 50%;
    transform: translateY(-50%);
  }

  .product-thumbnail {
    width: 100px;
    height: 100px;
  }

  .thumbnail__img img{
    width: 100%;
    height: 100%;
  }

  .product-cart__footer .dp-btn {
    letter-spacing: -.96px;
  }

  .order-detail__header {

    .order-detail__date {
      font-size: 14px;
      letter-spacing: -.42px;
      line-height: 17px;
      font-weight: 500;
      color: $gray-800;
    }

    .order-detail__number {
      font-size: 14px;
      letter-spacing: -.42px;
      line-height: 17px;
      font-weight: 500;
      color: $gray-700;
    }

    .dp-bar {
      margin-right: 10px;
      margin-left: 10px;
    }

    .detail-header-btn {
      .dp-btn {
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 20px;
        padding: 0 15px;
        width: auto;
      }
      .dp-btn + .dp-btn {
        margin-left: 10px;
      }
    }
  }

  .order-detail__section {
    padding: 30px 0;

    &.free-item__section {
      .section-title {
        padding-bottom: 20px;
      }

      .product-thumbnail {
        width: 155px;
        height: 155px;
      }
    }

    .brand-name {
      font-size: 12px;
      letter-spacing: -.48px;
      line-height: 17px;
      color: $gray-700;
      padding-bottom: 14px;
      margin-bottom: 30px;
      border-bottom: 1px solid $gray-400;

      .atten-new {
        letter-spacing: -.36px;
      }
    }

    .order-items {
      & > li + li {
        margin-top: 40px;
      }
    }

    .product-option ul {
      font-size: 12px;
      letter-spacing: -.48px;
      line-height: 17px;
    }

    .free-item__container + .free-item__container {
      margin-top: 40px;
    }

    .section-title {
      padding-bottom: 14px;
      border-bottom: 1px solid $gray-400;

      h2 {
        font-size: 16px;
        letter-spacing: -.64px;
        line-height: 24px;
        font-weight: 500;
      }

      &.no-border-bottom {
        border-bottom: none;
      }
    }

    .section__p {
      font-size: 14px;
      letter-spacing: -.56px;
      line-height: 20px;
      font-weight: 500;
      word-break: keep-all;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;

      .quantity {
        margin-top: 4px;
      }
    }

    .product-thumbnail {
      margin-bottom: 12px;
    }

    .item-name {
      margin-bottom: 4px;
    }

    .section__free-item ul {
      & > li {
        margin-bottom: 10px;
      }

      & > li:nth-last-child(1),
      & > li:nth-last-child(2) {
        margin-bottom: 0;
      }
    }

    .section-info {
      width: 100%;
      margin-top: 20px;
    }

    .section-info__ul {
      width: 100%;
      & > li {
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 22px;
        color: $gray-700;
      }

      & > li + li {
        margin-top: 6px;
      }

      & > li > ul {
        & li:first-child {
          min-width: 74px;
          margin-right: 16px;
        }
      }
    }

    // 배송정보 버튼
    .delivery-change__btn {
      width: auto;
      cursor: pointer;

      .dp-btn {
        padding-left: 14px;
        padding-right: 10px;
      }

      .icon-pick-black {
        background: url("~@assets.admin/common/icon/icon-pick-black-18px.svg") no-repeat 0;
      }

      .dp-btn-icon span + i {
        margin-left: 2px;
      }
    }

    .total-price {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 20px;
      padding-top: 20px;
      border-top: 1px solid $gray-400;

      p:first-child {
        font-size: 16px;
        letter-spacing: -.64px;
        line-height: 24px;
        font-weight: 700;
      }

      p:last-child {
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 20px;
        font-weight: 400;
      }

      .atten-new {
        font-size: 18px;
        letter-spacing: -.54px;
        font-weight: 600;
        margin-right: 2px;
      }
    }

    .receipt__btn {
      width: 100px;

      .dp-btn {
        font-size: 14px;
        letter-spacing: -.56px;
      }
    }

    // 환불/추가결제정보
    .section-info__title {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 10px;

      &:not(:first-child){
        margin-top: 20px;
        padding-top: 20px;
        border-top: 1px solid $gray-400;
      }

      .section-info__p {
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 20px;
      }

      .section-info__span {
        font-size: 12px;
        letter-spacing: -.48px;
        line-height: 17px;
        font-weight: 700;
        margin-right: 4px;
      }

      .icon-arrow-right {
        width: 10px;
        height: 10px;
        background-size: 10px !important;
        margin-top: 2px;
      }

    }
  }

  .order-exchange__section {
    padding: 30px 0;

    .brand-name {
      font-size: 12px;
      letter-spacing: -.48px;
      line-height: 17px;
      color: $gray-700;
      padding-bottom: 14px;
      margin-bottom: 30px;
      border-bottom: 1px solid $gray-400;

      .atten-new {
        letter-spacing: -.36px;
      }
    }

    .ordered-item {
      margin-bottom: 40px;
    }

    .exchange-status {
      display: flex;
      align-items: flex-start;
    }

    .detail-add {
      margin-right: 102px;
    }

    .exchange-status__ul {
      width: 100%;

      & > li + li {
        margin-top: 20px;
      }

      .product-info {
        width: 100%;
      }
    }


  }
}

// 배송지 변경 모달
.address-change-modal {

  .form-control[readonly] {
    color: $gray-800;
  }

  .delivery-info__header-btn {
    display: flex;
    justify-content: flex-end;
    margin-bottom: 20px;

    .dp-btn {
      width: auto;
      cursor: pointer;
    }

    .icon-pick-black {
      background: url("~@assets.admin/common/icon/icon-pick-black-18px.svg") no-repeat 0;
    }

    .dp-btn-icon span + i {
      margin-left: 2px;
    }
  }

  .form-group {
    margin-bottom: 10px;
  }

  .dp-panel {
    padding-top: 20px;
  }

  .delivery-info__adderss__input {
    margin-right: 10px;
    flex: 1;
  }

  .delivery-info__address__btn button {
    width: 100px;
    padding: 0 10px;
  }

  .btn-group {
    margin-top: 155px;
  }

  .footer-btn {
    width: inherit !important;
  }

  .input-label {
    font-weight: 500;
  }
}

// 구매 확정 모달
.confirm-buy-modal {

  .form-group {
    margin-bottom: 10px;
  }
  .product-option {
    .dp-p-sm {
      font-size: 12px;
      letter-spacing: -.48px;
    }
  }

  &.dp-modal {
    padding: 0;

    .modal-body {
      padding: 30px;
    }
  }
  .btn-group .btn + .btn {
    margin-left: 0;
  }
  .btn-group .btn {
    width: 50%;
  }
}

// 배송지 목록 모달
.address-select-modal {

  .shipping-list {
    li + li {
      margin-top: 20px;
    }
  }

  .address-add-btn {
    margin-top: 40px;
  }
}

// 보증서 모달
