    padding-top: 20px;
  }

  .item-option {
    color: $gray-700;
    margin-top: 2px;
  }

  .transaction-detail__title {
    font-size: 16px;
    letter-spacing: -.64px;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .transaction-detail__ul {

    li + li {
      margin-top: 6px;
    }
    p {
      color: $gray-700;
      font-size: 14px;
      letter-spacing: -.56px;
      line-height: 20px;
      margin-bottom: 0;
