        }

      }

      .unit {
        font-size: 12px;
        letter-spacing: -.48px;
        line-height: 17px;
      }

    }

    th,td {
      color: $gray-800;
      font-size: 14px;
      letter-spacing: -.56px;
      line-height: 20px;
      font-weight: 400;
    }
  }

  .dp-price-info {
    padding-bottom: 20px;
    margin-bottom: 20px;
    border-bottom: 1px solid $gray-400;

    li + li {
      margin-top: 10px;
    }
  }

  .total-price {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .total-price__text {
    font-size: 16px;
    letter-spacing: -.64px;
    line-height: 24px;
    font-weight: 700;
  }

  .atten-new {
    font-size: 18px;
    letter-spacing: -.54px;
    line-height: 21px;
    font-weight: 600;
    margin-right: 2px;
  }

  .unit {
    font-size: 14px;
    letter-spacing: -.56px;
    line-height: 20px;
  }
}

// 배송조회 모달
.tracking-modal {
  &.dp-modal .modal-body {
    padding: 0 20px;
  }

  .dp-tabs .nav-tabs {
    margin-top: 20px;
    margin-bottom: 0;
  }

  .dp-tabs .nav-tabs .nav-item {
    width: calc(33.333333% + 1px);
    margin-right: -1px;
  }

  // 직접배송조회 모달
  .directly-delivery__section {
    padding: 40px 0;

    .info-text {
      font-size: 16px;
      letter-spacing: -.64px;
      line-height: 24px;
      text-align: center;
      margin-bottom: 0;
    }

    .info-text + .info-text {
      margin-top: 2px;
    }

    .tracking-text-etc {
      font-size: 14px;
      letter-spacing: -.56px;
      margin: 8px 0 16px 0;
    }

    .box-container {
      width: 100%;
      padding: 14px 0;
      margin-top: 16px;
      background-color: $gray-100;

      & > p {
        margin-bottom: 0;
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 20px;
        color: $gray-700;
        text-align: center;
        word-break: keep-all;
      }
    }
  }

  .tracking-status__section {
    padding: 40px 0;

    .tracking-status__h2 {
      font-size: 16px;
      letter-spacing: -.64px;
      line-height: 24px;
      font-weight: 400;
      text-align: center;
      margin-bottom: 36px;
    }
  }

  .tracking__section {
    padding: 30px 0;
  }


  .info__ul {

    li + li {
      margin-top: 6px;
    }
    p {
      color: $gray-700;
      font-size: 14px;
      letter-spacing: -.56px;
      line-height: 20px;
      margin-bottom: 0;
      word-break: keep-all;
    }
  }

  .info__text {
    display: flex;
    align-items: center;

    p:first-child {
      width: 62px;
      margin-right: 28px;
    }
  }

  .call-btn {
    width: auto;
    margin-left: 6px;
    padding: 0 16px;

    & > span {
      letter-spacing: -.36px;
      font-weight: 500;
    }
  }

  .tracking-status-text__section {
    display: flex;
    padding: 30px 20px;

    .tracking-location__ul {
      li {
        position: relative;
        &:before {
          position: absolute;
          top: 5px;
          left: 0;
          display: block;
          content: '';
          width: 10px;
          height: 10px;
          border-radius: 50%;
          background: $gray-400;
        }
        &:after {
          position: absolute;
          top: 8px;
          left: 4px;
          display: block;
          content: '';
          width: 2px;
          height: calc(100% + 20px);
          background: $gray-400;
        }
        color: $gray-700;
        p + p {
          margin-top: 4px;
        }
      }
      li:last-child {
        &:after {
          display: none;
        }
      }
      li + li {
        margin-top: 20px;
      }
      p {
        font-size: 14px;
        letter-spacing: -.56px;
        line-height: 20px;
      }
      .location-item {
        padding-left: 50px;
      }
      li.active {
        &:before,
        &:after {
          background: $gray-800;
        }
        .location-item p {
          color: $gray-800;
        }
        .location-item p:first-child {
          font-weight: 500;
        }
      }
    }
  }
  .tracking-stepper {
    display: flex;
    li {
      flex: 1 1 0;
    }
    .stepper-item {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      &:before,
      &:after {
        position: absolute;
        top: 4px;
        left: 0;
        display: block;
        content: '';
        width: 50%;
        height: 2px;
        background: $gray-400;
      }
      &:after {
        left: 50%;
      }
      .stepper-bullet {
        position: relative;
        z-index: 2;
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: $gray-400;
        margin-bottom: 20px;
      }
      .stepper-text {
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 14px;
        letter-spacing: -.56px;
        color: $gray-800;
        margin-bottom: 0;
        padding: 0 12px;
        height: 26px;
        border-radius: 13px;
        white-space: nowrap;
      }
    }
    li:first-child .stepper-item:before {
      display: none;
    }
    li:last-child .stepper-item:after {
      display: none;
    }
    // 활성화 된 CSS
    .stepper-item.pass {
      &:before,
      &:after {
        background: $primary;
      }
      .stepper-bullet {
        background: $primary;
      }
      .stepper-text {
        color: $primary;
      }
    }
    // 현재 활성화 된 단계
    .stepper-item.active {
      &:before {
        background: $primary;
      }
      .stepper-bullet {
        position: relative;
        background: $primary;
        &:before {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          display: block;
          content: '';
          width: 34px;
          height: 34px;
          border-radius: 0;
          background: url("~@/assets/common/icon/icon-shipping-car-34px.svg") no-repeat 0;
        }
      }
      .stepper-text {
        font-size: 12px;
        letter-spacing: -.48px;
        color: #fff;
        background: $primary;
      }
    }
  }

  // 직접배송조회 모달 푸터
  .directly-delivery__section-footer {
    padding: 30px 0;

    .center-info {
      margin-bottom: 10px;
      font-size: 14px;
      letter-spacing: -.56px;
      line-height: 20px;
      color: $gray-800;
      text-align: center;
    }
    .info-span {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .brand-name {
      font-size: 12px;
      letter-spacing: -.48px;
      line-height: 17px;
      margin-right: 6px;
      color: $gray-700;
    }
    .brand-number {
      font-size: 20px;
      letter-spacing: -.6px;
      line-height: 24px;
      font-weight: 600;
    }
  }
}
