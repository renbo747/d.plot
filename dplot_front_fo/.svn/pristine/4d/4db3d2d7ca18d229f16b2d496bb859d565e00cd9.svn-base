.option-item {  //width: 820px;  border: 1px solid $border-color;  padding: 16px;  @include media-breakpoint-up(xl) {    padding: 10px 30px;    display: flex;    align-items: center;  }  .item__top {    display: flex;    justify-content: space-between;    align-items: center;    margin-bottom: 20px;  }  .item__title {    width: calc(100% - 30px);    display: block;    align-items: center;    font-size: 12px;    letter-spacing: -.48px;    color: $gray-700;    margin-bottom: 0;    text-overflow: ellipsis;    overflow: hidden;  }  .item__title + div .rounded-pill {    margin-right: 20px;  }  .dp-bar {    display: inline-flex;    margin-left: 10px;    margin-right: 10px;  }  .item__bottom {    display: flex;    justify-content: space-between;    align-items: flex-start;  }  .item__price {    font-size: 16px;    letter-spacing: -.54px;    margin-bottom: 0;    span {      font-size: 18px;      letter-spacing: -.54px;      font-weight: 600;      margin-right: 2px;    }  }  // pc 버전  .option-item-pc {    width: 100%;    .product-info-area {      width: calc(100% - 400px);      .item__title {        font-size: 16px;        letter-spacing: -.64px;        line-height: 24px;        color: $gray-700;        margin-right: 20px;      }      .dp-btn {        width: 100px;        padding: 0;      }      .icon-alarm {        background-image: url("~@/assets/common/icon/icon-alarm-black-18px.svg");        width: 18px;        height: 18px;        background-size: 18px;        margin-top: 2px;      }    }    .product-price-area {      width: 100px;      margin-right: 100px;      .atten-new {        font-size: 18px;        letter-spacing: -.54px;        line-height: 34px;        font-weight: 600;        margin-right: 2px;        .price-unit {          font-size: 14px;          letter-spacing: -.56px;          line-height: 26px;        }      }    }    .product-count-area {      display: flex;      align-items: center;      width: 100px;      margin-right: 80px;      text-align: center;      .sold-out {        font-size: 16px;        letter-spacing: -.64px;      }    }    .close-icon-area {      width: 20px;    }  }}